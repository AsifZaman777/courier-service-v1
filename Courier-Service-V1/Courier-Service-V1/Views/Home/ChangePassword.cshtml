@model ResetPassword

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="card-box">
                        <h4 class="header-title">Change Password</h4>
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="OldPassword">Old Password:</label>
                                <input asp-for="OldPassword" type="password" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword">New Password:</label>
                                <input asp-for="NewPassword" type="password" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm New Password:</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <button asp-action="ChangePassword" type="submit" class="btn btn-primary">Change Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
