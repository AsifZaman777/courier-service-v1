@{
    ViewData["Title"] = "Rider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-box">
                        <h4 class="header-title"> Our Riders : @Model.Count</h4>

                        <a asp-controller="Home" asp-action="AddRider" class="btn btn-primary waves-effect waves-light float-right">
                            <i class="fas fa-plus-circle"></i>
                            Add Rider
                        </a>

                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Contact No</th>
                                        <th>Salary</th>
                                        <th>Status</th>
                                        <th>State</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.ContactNumber</td>
                                            <td>@item.Salary</td>
                                            @if (@item.Status == 1)
                                            {
                                                <td><span class="badge badge-success">Active</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-danger">Inactive</span></td>
                                            }

                                            @if (@item.State == "Available")
                                            {
                                                <td><span class="badge badge-success">@item.State</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-danger">@item.State</span></td>
                                            }

                                            <td>
                                                <a asp-action="EditRider" asp-route-id="@item.Id" asp-controller="Home" class="btn btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                    Edit
                                                </a>

                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn btn-danger waves-effect waves-light" data-toggle="modal" data-target="#myModal_@item.Id">
                                                    <i class="fas fa-trash"></i>
                                                    Delete
                                                </button>

                                                <!-- Modal -->
                                                <div id="myModal_@item.Id" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="myModalLabel">Delete Rider</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h5 class="font-16">Are you sure you want to delete this rider?</h5>
                                                                <!-- Display rider details here if needed -->
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-light waves-effect" data-dismiss="modal">Close</button>
                                                                <a asp-route-id="@item.Id" asp-controller="Home" asp-action="DeleteRider" class="btn btn-danger">
                                                                    <i class="fas fa-trash"></i>
                                                                    Delete
                                                                </a>
                                                            </div>
                                                        </div><!-- /.modal-content -->
                                                    </div><!-- /.modal-dialog -->
                                                </div><!-- /.modal -->
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
