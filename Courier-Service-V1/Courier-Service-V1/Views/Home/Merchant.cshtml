@model IEnumerable<Courier_Service_V1.Models.Merchant>

@{
    ViewData["Title"] = "Merchant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-box">
                        <h4 class="header-title">Our Merchants : @Model.Count()</h4>

                        <a asp-controller="Home" asp-action="AddMerchant" class="btn btn-success waves-effect waves-light float-right">
                            <i class="fas fa-plus-circle"></i>
                            Add Merchant
                        </a>

                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Company Name</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Contact No</th>
                                       @*  <th>Status</th> *@
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th scope="row">@item.Id</th>
                                            <td>@item.CompanyName</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.ContactNumber</td>
                                            @* @if (item.Status == 1)
                                            {
                                                <td><span class="badge badge-success">Active</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-danger">Inactive</span></td>
                                            }
 *@
                                            <td>
                                                <a asp-action="EditMerchant" asp-route-id="@item.Id" asp-controller="Home" class="btn btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                    Edit
                                                </a>
                                                <a asp-route-id="@item.Id" asp-controller="Home" asp-action="DeleteMerchant" class="btn btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--- end row -->
        </div>
    </div>
</div>
