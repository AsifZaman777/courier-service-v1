@{
    ViewData["Title"] = "Home Page";
}

<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Dashboard</a></li>
                               
                            </ol>
                        </div>
                        <h4 class="page-title">Dashboard</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->



            <div class="row justify-content-center">
                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-pink">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Riders</h6>
                        <h3 class="my-3" data-plugin="counterup">@ViewBag.RiderCount</h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-success">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Merchant</h6>
                        <h3 class="my-3"><span data-plugin="counterup">@ViewBag.MerchantCount</span></h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-info">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Total Parcel</h6>
                        <h3 class="my-3"><span data-plugin="counterup">@ViewBag.TotalParcel</span></h3>
                    </div>
                </div>
            </div>
            <hr />
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-warning">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Today Pickup Request</h6>
                        <h3 class="my-3" data-plugin="counterup">@ViewBag.TodayPickupRequest</h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-success">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Today Parcel Dispatched </h6>
                        <h3 class="my-3"><span data-plugin="counterup">@ViewBag.TodayDispatched</span></h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-primary">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">
                            Today Delivery Complete

                        </h6>
                        <h3 class="my-3"><span data-plugin="counterup">@ViewBag.TodayDelivered</span></h3>
                    </div>
                </div>
            </div>
           
            <!-- end row -->
            
            <hr />
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-warning">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">On Transit</h6>
                        <h3 class="my-3" data-plugin="counterup">@ViewBag.TransitCount</h3>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-success">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Today Parcel Cancelled</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.TodayCancelled</span></h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-primary">
                            <h6 class="text-black font-weight-bold text-uppercase mt-0">Today Parcel Returned</h6>
                            <h3 class="my-3"><span data-plugin="counterup">@ViewBag.TodayReturned</span></h3>
                    </div>
                </div>
            </div>
        </div>
        <hr />
            <!-- end row -->

            <div class="row justify-content-center">

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-warning">
                     <h6  class="text-black font-weight-bold text-uppercase mt-0">Total Delivery Complete</h6>
                    <h3 class="my-3" data-plugin="counterup">@ViewBag.DeliveredCount</h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-success">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0">Total Returned Parcel</h6>
                        <h3 class="my-3"><span data-plugin="counterup">@ViewBag.ReturnCount</span></h3>
                    </div>
                </div>

                <div class="col-md-6 col-xl-3">
                    <div class="card-box tilebox-one bg-primary">
                        <h6 class="text-black font-weight-bold text-uppercase mt-0"> Total Parcel Cancelled</h6>
                        <h3 class="my-3"><span data-plugin="counterup">@ViewBag.CancelledCount</span></h3>
                    </div>
                </div>
            </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card-box">
                    
                    <h4 class="header-title text-primary">Today's Parcel : @ViewBag.TodayPickupRequest</h4>
                   
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>ID</th>
                                    <th>Merchant Name</th>
                                    <th>Pickup Location</th>
                                    <th>Pickup Request Date</th>
                                    <th>Receiver Information</th>
                                    @*  <th>Receiver Name</th>
                                    <th>Address</th>
                                    <th>Contact</th> *@

                                    <th>Product</th>
                                    @* <th>Product Name</th>
                                    <th>Product Weight</th>
                                    <th>Product Price</th>
                                    <th>Product Quantity</th> *@
                                    <th>Delivery</th>

                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>Payment Status</th>
                                    <th>Payment</th>
                                    <th>Action</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int sl = 1;
                                }
                                @foreach (var parcel in ViewBag.TodayParcelList)
                                {
                                    <tr>
                                        <td>@sl</td>
                                        <td>@parcel.Id</td>
                                        <td>@parcel.Merchant.Name</td>
                                        <td>@parcel.PickupLocation</td>
                                        <td>@(parcel.PickupRequestDate?.Date.ToShortDateString())</td>
                                        <td>
                                            <strong>Name:</strong> @parcel.ReceiverName<br>
                                            <strong>Address:</strong> @parcel.ReceiverAddress<br>
                                            <strong>Contact:</strong> @parcel.ReceiverContactNumber
                                        </td>

                                        <td>
                                            <strong>Name:</strong> @parcel.ProductName <br />
                                            <strong>Weight:</strong> @parcel.ProductWeight <br />
                                            <strong>Price:</strong> @parcel.ProductPrice <br />
                                            <strong>Quantity:</strong> @parcel.ProductQuantity <br />
                                        </td>

                                        <td>
                                            <strong>Type:</strong> @parcel.DeliveryType <br />
                                            <strong>Charge:</strong> @parcel.DeliveryCharge <br />
                                        </td>


                                        <td>@parcel.TotalPrice</td>


                                        @if (parcel.Status == "Pickup Request")
                                        {
                                            <td><span class="badge badge-success font-weight-bold">@parcel.Status</span></td>
                                        }
                                        else if (parcel.Status == "Dispatch")
                                        {
                                            <td><span class="badge badge-success font-weight-bold">@parcel.Status</span></td>
                                        }
                                        else if (parcel.Status == "Transit")
                                        {
                                            <td><span class="badge badge-info text-medium">@parcel.Status</span></td>
                                        }
                                        else if (parcel.Status == "Delivered")
                                        {
                                            <td><span class="badge badge-success text-medium">@parcel.Status</span></td>
                                        }
                                        else
                                        {
                                            <td><span class="badge badge-danger text-medium">@parcel.Status</span></td>
                                        }





                                        <td>
                                            @if (parcel.PaymentStatus == "Paid")
                                            {
                                                <span class="badge badge-success text-medium">@parcel.PaymentStatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger text-medium">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            @if (parcel.PaymentStatus == "Paid" && parcel.PaymentInHand == null)
                                            {
                                                <a asp-route-id="@parcel.Id" asp-action="PaymentInHand" class="btn btn-xs btn-success">
                                                    <i class="fas fa-check"></i>
                                                    Payment In Hand
                                                </a>
                                                <a asp-route-id="@parcel.Id" asp-action="PaymentNotInHand" class="btn btn-xs btn-danger">
                                                    <i class="fas fa-check"></i>
                                                    Not In Hand
                                                </a>
                                            }
                                            else if (parcel.PaymentStatus == "Paid" && parcel.PaymentInHand == "PaymentInHand")
                                            {
                                                <span class="badge badge-warning text-medium">In Hand</span>
                                            }
                                            else if (parcel.PaymentStatus == "Paid" && parcel.PaymentInHand == "PaymentNotInHand")
                                            {
                                                <span class="badge badge-danger text-medium">Not In Hand</span>

                                                <a asp-route-id="@parcel.Id" asp-action="PaymentInHand" class="btn btn-xs btn-success"><i class="fas fa-check"></i>Payment In Hand</a>
                                            }


                                            @* @if(parcel.PaymentStatus =="Paid")
                                        {
                                        <a asp-route-id="@parcel.Id" asp-action="PaymentInHand" class="btn btn-xs btn-success"><i class="fas fa-check"></i>Payment In Hand</a>
                                        <span class="badge badge-danger text-medium">Not In Hand</span>
                                        }
                                        else{
                                        <span class="badge badge-info text-medium">In Hand</span>
                                        } *@

                                        </td>
                                        @if (parcel.RiderId == null)
                                        {
                                            <td>
                                                <a asp-action="AssignParcel" asp-route-id="@parcel.Id" asp-controller="Home" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-plus-circle"></i> Assign Rider

                                                </a>

                                            </td>
                                        }
                                        else
                                        {
                                            <td>

                                                <span class="badge badge-success text-medium">Rider Assigned</span>
                                                @*  <a asp-route-id="@parcel.Id" asp-controller="Home" asp-action="DeleteRider" class="btn btn-danger">
                                        <i class="fas fa-trash"></i>

                                        </a> *@
                                            </td>
                                        }
                                        <td>
                                            <!-- Button trigger modal -->
                                            <button class="btn btn-sm btn-danger waves-effect waves-light" data-toggle="modal" data-target="#myModal_@parcel.Id">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </button>

                                            <!-- Modal -->
                                            <div id="myModal_@parcel.Id" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="myModalLabel">Delete Parcel</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <h5 class="font-16">Are you sure you want to delete this parcel?</h5>
                                                            <!-- Display parcel details here if needed -->
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-light waves-effect" data-dismiss="modal">Close</button>
                                                            <a asp-route-id="@parcel.Id" asp-action="DeleteParcel" class="btn btn-danger">
                                                                <i class="fas fa-trash"></i>
                                                                Delete
                                                            </a>
                                                        </div>
                                                    </div><!-- /.modal-content -->
                                                </div><!-- /.modal-dialog -->
                                            </div><!-- /.modal -->



                                        </td>


                                    </tr>
                                    <!-- sample modal content -->
                                    sl++;


                                    <!-- /.modal -->
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        </div> <!-- end container-fluid -->

    </div> <!-- end content -->





</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->
