@{
    ViewData["Title"] = "Forget Password";
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Forget Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Courier-Service" name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="https://i.ibb.co/nrbyqDb/cropped-20240212-042330-0000-1.webp?fbclid=IwAR1NZ_esF6HEjndt-7mpQEAgvTV_ptZlr3n0COhZFFAu4DzeOkLipq7P0ik">

    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">

</head>

<body class="authentication-bg">
    <partial name="_Notification" />
    <div class="account-pages pt-5 my-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="account-card-box">
                        <div class="card mb-0">
                            <div class="card-body p-4">

                                <div class="text-center">
                                    <div class="my-3">
                                        <a asp-action="Home">
                                            <span><img src="https://png.pngtree.com/png-clipart/20230131/ourmid/pngtree-fast-delivery-png-image_6576285.png" alt="" height="150"></span>
                                        </a>
                                    </div>
                                    <h5 class="text-muted text-uppercase py-3 font-16">Forget Password</h5>
                                </div>
                                
                                <form method="post" class="mt-2">

                                    <div class="form-group mb-3">
                                        <input class="form-control" type="text" name="email" required="" placeholder="Enter your Email">
                                    </div>
                                    <div class="form-group mb-3">
                                        <input class="form-control" type="password" name="password" required="" placeholder="New Password">
                                    </div>
                                    <div class="form-group mb-3">
                                        <input class="form-control" type="password" name="cpassword" required="" placeholder="Confirm New Password">
                                    </div>

                                    <div class="form-group text-center">
                                        <button asp-controller="Home" asp-action="ForgetPassword" class="btn btn-success btn-block waves-effect waves-light" type="submit">Reset Password</button>
                                    </div>

                                    
                                    <a asp-action="Login" asp-controller="Home" class=" text-muted font-weight-bold"><i class="mdi mdi-login"></i>Login</a>
                                </form>


                            </div> <!-- end card-body -->
                        </div>
                        <!-- end card -->
                    </div>


                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor js -->
    <script src="~/assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.min.js"></script>

</body>
</html>
